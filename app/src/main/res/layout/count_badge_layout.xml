<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notif_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="5dp">

    <ImageButton
        android:id="@+id/go_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:contentDescription="bell"
        android:gravity="center"
        android:src="@drawable/white_cart" />

    <TextView
        android:id="@+id/number_of_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/go_to_cart"
        android:layout_alignTop="@id/go_to_cart"
        android:background="@drawable/notif_rounded_square"
        android:gravity="center"
        android:minWidth="15sp"
        android:paddingBottom="1dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="1dp"
        android:textColor="#ffffffff"
        android:textSize="10sp"
        android:visibility="gone" />
</RelativeLayout>